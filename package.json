{
  "name": "styleguide",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "yarn format:js && yarn format:css",
    "format:js": "prettier ./*.js --write",
    "format:css": "prettier **/*.css --parser=css --write",
    "dev": "parcel index.html",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "parcel-bundler": "^1.9.3",
    "postcss-modules": "^1.1.0",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "lint-staged": {
    "*.js": [
      "yarn format:js",
      "git add"
    ],
    "*.css": [
      "yarn format:css",
      "git add"
    ]
  },
  "dependencies": {}
}
